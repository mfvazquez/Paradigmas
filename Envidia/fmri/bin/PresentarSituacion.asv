function OnSetTime = PresentarSituacion(texto, textura, mensaje)

    global spaceKey;
    global hd;

    DibujarSituacion(texto, textura, mensaje);
    [~, OnSetTime] = Screen('Flip', hd.window);
    
    esperar = true;
    while esperar
        tecla = GetChar;
        if tecla == spaceKey
            esperar = false;
        end   
    end
    
end